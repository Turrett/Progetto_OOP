<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toplayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user.UserFragment">


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/User_iv"
                android:layout_width="168dp"
                android:layout_height="167dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:contentDescription="@string/tbd"
                android:visibility="visible"
                tools:src="@tools:sample/avatars" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/modify_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:fabCustomSize="50dp"
               android:layout_marginTop="20dp"
                android:backgroundTint="@color/color11"
                android:clickable="true"
                android:focusable="true"
                android:src="@android:drawable/ic_menu_edit"
                android:layout_gravity="center_horizontal"
                />

            <ProgressBar
                android:id="@+id/progressbar_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:backgroundTint="@color/color12"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/user_username"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="@string/nome_utente"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:paddingTop="10dp"
                android:textSize="18sp"
                tools:ignore="TextViewEdits" />

            <RatingBar
                android:id="@+id/rating_bar"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_gravity="center_horizontal"
                android:isIndicator="true"
                android:max="10"
                android:numStars="10"
                android:scaleX="0.7"
                android:scaleY="0.7"
                tools:rating="0.5" />

            <TextView
                android:id="@+id/User_email"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:autofillHints="yes"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:paddingTop="8dp"
                android:textSize="18sp"
                tools:ignore="TextViewEdits" />

            <TextView
                android:id="@+id/User_address"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:ems="10"
                android:hint="@string/address"
                android:importantForAutofill="no"
                android:inputType="textPostalAddress"
                android:paddingTop="8dp"
                android:textSize="18sp"
                tools:ignore="TextViewEdits" />

            <TextView
                android:id="@+id/User_Phone_Number"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:ems="10"
                android:hint="@string/telephone_number"
                android:importantForAutofill="no"
                android:paddingTop="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/labelorario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="7dp"
                android:backgroundTint="@color/color10"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/orari_di_disponibilit"
                android:textSize="18sp" />

            <GridLayout
                android:id="@+id/gridl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:columnCount="2"
                android:paddingStart="5dp"
                android:rowCount="7"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/txtv1"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:text="@string/luned"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/monday_hrs"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="@string/orario_di_luned"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtv3"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingTop="3dp"
                    android:text="@string/marted"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tuesday_hrs"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="3dp"
                    android:hint="@string/orario_di_marted"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtv5"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="8dp"
                    android:paddingTop="3dp"
                    android:text="@string/mercoled"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/wednesday_hrs"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="3dp"
                    android:hint="@string/orario_di_mercoled"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtv7"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingTop="3dp"
                    android:text="@string/gioved"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/thursday_hrs"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:hint="@string/orario_di_gioved"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtv9"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="8dp"
                    android:paddingTop="3dp"
                    android:text="@string/venerd"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/friday_hrs"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:hint="@string/orario_di_venerd"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtv11"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingTop="3dp"
                    android:text="@string/sabato"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/saturday_hrs"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/orario_di_sabato"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtv13"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="@string/domenica"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/sunday_hrs"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/orario_di_domenica"
                    android:textSize="18sp" />
            </GridLayout>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

