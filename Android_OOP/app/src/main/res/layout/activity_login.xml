<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="268dp"
            android:visibility="visible"
            tools:srcCompat="@tools:sample/backgrounds/scenic"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/edit_text_login_mail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:contentDescription="Insert account mail"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Insert e-mail address"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/edit_text_login_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:contentDescription="insert account password "
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Insert password"
            android:layout_gravity="center_horizontal"
            android:autofillHints="password" />


        <Button
            android:id="@+id/login_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Log In "
            android:layout_marginTop="30dp"
            android:background="@drawable/buttons"
            android:textColor="@color/color15"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:background="@drawable/buttons"
            android:layout_marginTop="10dp"
            android:textColor="@color/color15"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar_log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/color12"/>

</androidx.constraintlayout.widget.ConstraintLayout>