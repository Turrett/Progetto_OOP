<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <!-- home -->
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.progettooop.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <!--<action
            android:id="@+id/homesearch"
            app:destination="@id/navigation_search" />-->
        <action
            android:id="@+id/homeaddadv"
            app:destination="@id/navigation_addadv" />
    </fragment>

    <!-- dashboard -->
    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.progettooop.ui.dashboard.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <!-- ricerca -->
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.progettooop.ui.search.SearchFragment"
        android:label="Ricerca"
        tools:layout="@layout/fragment_search" >
       <!-- <action
            android:id="@+id/searchhome"
            app:destination="@id/navigation_home" />-->
    </fragment>

    <!-- User -->
    <fragment
        android:id="@+id/navigation_user"
        android:name="com.example.progettooop.ui.user.UserFragment"
        android:label="Area personale"
        tools:layout="@layout/fragment_user" />

    <!-- inserimento nuovo adv -->
    <fragment
        android:id="@+id/navigation_addadv"
        android:name="com.example.progettooop.ui.advertisement.AddAdvFragment"
        android:label="Inserimento nuovo annuncio"
        tools:layout="@layout/fragment_addadv" >
        <action
            android:id="@+id/addadvhome"
            app:destination="@id/navigation_home" />
    </fragment>




</navigation>